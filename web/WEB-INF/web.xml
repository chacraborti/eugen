<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
           version="3.1">
    
    <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>main.servlet.Servlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>first</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoggerFilter</filter-name> <!-- mandatory -->
        <filter-class>main.filters.LoggerFilter</filter-class> <!-- mandatory -->
    </filter>

    <filter-mapping>
        <filter-name>LoggerFilter</filter-name> <!-- mandatory -->
        <!--<url-pattern>/*</url-pattern> &lt;!&ndash; either url-pattern or servlet-name is mandatory &ndash;&gt;-->
        <servlet-name>first</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>VoidFilter</filter-name> <!-- mandatory -->
        <filter-class>main.filters.VoidFilter</filter-class> <!-- mandatory -->
    </filter>

    <filter-mapping>
        <filter-name>VoidFilter</filter-name> <!-- mandatory -->
        <servlet-name>first</servlet-name>
    </filter-mapping>

</web-app>
